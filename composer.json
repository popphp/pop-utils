{
    "name": "popphp/pop-utils",
    "description": "Pop Utilities Component for Pop PHP Framework",
    "keywords": [
        "utilities",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-utils",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.3.0",
        "popphp/popphp": "^4.4.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pop\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\Utils\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.3.x-dev"
        }
    }
}
